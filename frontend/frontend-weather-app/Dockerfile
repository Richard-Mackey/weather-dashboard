FROM node:20-alpine AS build
WORKDIR /app
COPY frontend/frontend-weather-app/package*.json ./
RUN npm install
COPY frontend/frontend-weather-app/ .
RUN npm run build

FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY frontend/frontend-weather-app/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]